{
  "name": "@danielfrg/ui",
  "version": "0.0.1",
  "description": "Styled SolidJS UI components with a shadcn-inspired Tailwind theme",
  "type": "module",
  "sideEffects": false,
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/danielfrg/ui.git",
    "directory": "packages/ui"
  },
  "homepage": "https://github.com/danielfrg/ui",
  "bugs": "https://github.com/danielfrg/ui/issues",
  "keywords": [
    "solid",
    "solidjs",
    "ui",
    "components",
    "tailwind",
    "shadcn",
    "styled"
  ],
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "src"
  ],
  "module": "./src/index.ts",
  "main": "./src/index.ts",
  "types": "./src/index.ts",
  "exports": {
    ".": {
      "types": "./src/index.ts",
      "solid": "./src/index.ts",
      "default": "./src/index.ts"
    },
    "./button": {
      "types": "./src/button.tsx",
      "solid": "./src/button.tsx",
      "default": "./src/button.tsx"
    },
    "./utils": {
      "types": "./src/utils.ts",
      "solid": "./src/utils.ts",
      "default": "./src/utils.ts"
    },
    "./theme.css": "./src/theme.css"
  },
  "peerDependencies": {
    "solid-js": "^1.8.15",
    "tailwindcss": "^4.0.0"
  },
  "dependencies": {
    "@danielfrg/ui-core": "workspace:*",
    "class-variance-authority": "^0.7.1"
  }
}
