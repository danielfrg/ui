---
import Base from "./Base.astro"

const { title, theme = "default" } = Astro.props
const themes = {
	default: {
		"--ui-background": "#ffffff",
		"--ui-foreground": "#1a141f",
		"--ui-muted": "#6f6e77",
		"--ui-line": "#e4e2e4",
		"--ui-accent": "#3e63dd",
		"--ui-accent-hover": "#3358d4",
		"--ui-soft": "#f3f3f5",
		"--ui-soft-hover": "#eaeaed",
		"--ui-ghost-hover": "#f5f4f6",
		"--ui-floating-panel": "rgba(239, 247, 255, 0.615)",
	},
	music: {
		"--ui-background": "#ffffff",
		"--ui-foreground": "#11181c",
		"--ui-muted": "#687076",
		"--ui-line": "#d7dbdf",
		"--ui-accent": "#e5484d",
		"--ui-accent-hover": "#dc3e42",
		"--ui-soft": "#eef1f3",
		"--ui-soft-hover": "#e3e7ea",
		"--ui-ghost-hover": "#f1f3f5",
		"--ui-floating-panel": "rgba(239, 247, 255, 0.615)",
	},
}
const themeVars = themes[theme as keyof typeof themes] ?? themes.default
const themeStyle = Object.entries(themeVars)
	.map(([key, value]) => `${key}:${value}`)
	.join(";")
---

<Base title={`${title} | @danielfrg/ui`}>
  <div class="docs-page">
    <div class="docs-container">
      <header class="header">
        <div class="header-content">
          <a href="/" class="logo">
            <img class="logo-icon" src="/favicon.svg" alt="@danielfrg/ui" />
            danielfrg/ui
          </a>
          <nav class="nav">
            <a href="https://github.com/danielfrg/ui" target="_blank" rel="noopener noreferrer">GitHub</a>
            <a href="/examples/">Examples</a>
          </nav>
        </div>
      </header>

      <main class="example-main" style={themeStyle} data-theme={theme}>
        <slot />
      </main>

      <footer class="footer">
        <div class="footer-content">
          <span>@danielfrg/ui - SolidJS UI components</span>
          <a href="https://github.com/danielfrg/ui" target="_blank" rel="noopener noreferrer">GitHub</a>
        </div>
      </footer>
    </div>
  </div>
</Base>

<style>
  .docs-page {
    --container-max-width: 1800px;
  }

  .example-main {
    padding: 36px;
    overflow-x: auto;
  }
</style>
