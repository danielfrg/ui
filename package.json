{
  "name": "danielfrg-ui",
  "private": true,
  "type": "module",
  "workspaces": [
    "packages/*",
    "docs"
  ],
  "scripts": {
    "dev:docs": "bun run --cwd docs dev",
    "format": "prettier --ignore-unknown --write .",
    "test": "vitest",
    "test:run": "vitest --run --reporter=dot",
    "typecheck": "tsc -p packages/ui/tsconfig.json --noEmit"
  },
  "devDependencies": {
    "@solidjs/testing-library": "^0.8.6",
    "@testing-library/jest-dom": "^6.4.2",
    "@types/bun": "latest",
    "jsdom": "^24.0.0",
    "prettier": "^3.8.1",
    "solid-js": "^1.8.15",
    "typescript-language-server": "^5.1.3",
    "vite": "^5.0.11",
    "vite-plugin-solid": "^2.9.1",
    "vitest": "^1.3.1"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "prettier": {
    "semi": false,
    "printWidth": 120
  }
}
